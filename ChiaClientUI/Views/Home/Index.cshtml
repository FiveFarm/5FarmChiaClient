@model LoginViewModel
@{
    Layout = ""
;}
<!DOCTYPE html>
<html lang="en" style="background-image:url(/images/bg.svg)">
<head>
    <title>5Farm Client Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/css/app.css">
    <link rel="stylesheet" type="text/css" href="~/css/base.css">
    <link rel="stylesheet" type="text/css" href="~/css/custom.css">
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
    <link rel="stylesheet" type="text/css" href="~/css/patternfly.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/patternfly-additions.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/pficon.css">
    <!--===============================================================================================-->

</head>
<body class="" data-new-gr-c-s-check-loaded="14.994.0" data-gr-ext-installed="">
    <div class="login-pf-page">
        <div id="kc-header" class="login-pf-page-header">
            <div id="kc-header-wrapper" class="">5Farm</div>
        </div>
        <div class="card-pfo">
            <header class="login-pf-header">
                <h1 id="kc-page-title">
                </h1>
            </header>
            <div id="kc-content">
                <div id="kc-content-wrapper">
                    <div>
                        <div class="header-image">
                            <img src="~/images/icons/app-logo.svg" class="header-logo">
                            <label style="position: absolute; bottom:0; right:inherit; color:white">@ViewData["AppVersion"]</label>
                        </div>

                        <div id="kc-form">

                            <div class="flex-parent">
                                <p class="welcome-text">Welcome!</p>
                                <p class="login-text">

                                    Log in to your account
                                </p>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div id="kc-form-wrapper">

                                <form id="kc-form-login" onsubmit="login.disabled = true; return true;" method="post">
                                    <div class="form-group">
                                        <label for="username" class="form-label">Email</label>

                                        <div class="input-container">
                                            <div class="input-icon">
                                                <img src="~/images/icons/envelope.svg">
                                            </div>
                                            <input asp-for="UserName" tabindex="1" placeholder="Enter email" id="username" class="pf-c-form-controlo" name="username" type="text" autocomplete="off">

                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <div class="flex-row">
                                            <label for="password" class="form-label">Password</label>
                                        </div>


                                        <div class="input-container">
                                            <div class="input-icon">
                                                <img src="~/images/icons/lock.svg">
                                            </div>
                                            <input asp-for="Password" tabindex="2" id="password" placeholder="Enter password" class="pf-c-form-controlo" value="" name="password" type="password" autocomplete="off">
                                            <div class="pf-icon-key">
                                                <img name="ImgPw" height="25" width="25" src="~/images/icons/EyeVisible.png" onclick="myFunction('password')" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="flex-row">
                                            <label for="Passphrase" class="form-label">Passphrase</label>
                                        </div>


                                        <div class="input-container">
                                            <div class="input-icon">
                                                <img src="~/images/icons/lock.svg">
                                            </div>
                                            <input asp-for="Passphrase" tabindex="2" id="passphrase" placeholder="Enter passphrase" class="pf-c-form-controlo" value="" name="passphrase" type="password" autocomplete="off">
                                            <div class="pf-icon-key">
                                                <img name="ImgPw" height="25" width="25" src="~/images/icons/EyeVisible.png" onclick="myFunction('passphrase')" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group login-pf-settings">
                                        <div id="kc-form-options">
                                        </div>


                                    </div>

                                    <div id="kc-form-buttons" class="form-group">
                                        <input type="hidden" id="id-hidden-input" name="credentialId">
                                        <input tabindex="4" class="pf-c-button pf-m-primary pf-m-block btn-lg" name="login" id="kc-login" type="submit" value="Log In">
                                    </div>
                                </form>

                            </div>



                        </div>

                    </div>




                    <div id="kc-info" class="login-pf-signup">
                        <div id="kc-info-wrapper" class="">



                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <grammarly-desktop-integration data-grammarly-shadow-root="true"></grammarly-desktop-integration>

    <script>
        function myFunction(elementName) {
            var x = document.getElementById(elementName);

            if (x.type === "password") {
                x.type = "text";
                //Img.Src = "~/images/icons/EyeVisible.png";
            }
            else {
                x.type = "password";
                //Img.Src = "~/images/icons/EyeNonVisible.png";
            }
        }
    </script>
</body>
</html>
